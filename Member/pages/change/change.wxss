.body{
  height: 100%;
  width: 100%;
  padding-top: 5rpx;
}
.changeInfo{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 90%;
  margin: 50rpx auto;
}
.changeInfoName{
  position: relative;
  height: 80rpx;
  width: 100%;
  border-radius: 10rpx;
  background: #fff;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.codeBtn{
  position: absolute;
  right: 0;
  top: 0;
  color: rgb(187, 187, 187);
  width: 10%;
  font-size: 26rpx;
  height: 80rpx;
  line-height: 50rpx;
}
.changeInfoName input{
  width:100rpx;
  height:100%;
}
.changeBtn{
  margin-top: 40rpx;
  width: 40%;
  height: 100rpx;
  background: #fff;
  color: #000;
  border-radius: 50rpx;
  bottom: 10%;
  line-height: 60rpx;
}
.v3{
  margin-bottom: 50rpx;
}
